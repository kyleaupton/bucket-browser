{
  "compilerOptions": {
    "target": "ESNext",
    "composite": true,
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@main/*": [
        "./electron/main/*"
      ],
      "@preload/*": [
        "./electron/preload/*"
      ],
      "@shared/*": [
        "./electron/shared/*"
      ]
    },
  },
  "include": ["vite.config.ts", "package.json", "electron"]
}
